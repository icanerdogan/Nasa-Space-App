<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/astronomyCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/astronomyFavorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="end"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_favorite_red_empty"/>

            <ImageView
                android:id="@+id/astronomyImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/LightSteelBlue"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/layoutInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/LightGreyTransparent1"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/astronomyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:padding="5dp"
                    android:text="M78 Wide Field"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/astronomyTextDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/ubuntu_medium"
                        android:gravity="start"
                        android:padding="5dp"
                        android:text="2021-01-21"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/astronomyButtonLearnMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/ubuntu_medium"
                        android:padding="5dp"
                        android:text="@string/learn_more"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/LightGreyTransparent2"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/astronomyTextTitleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:gravity="start"
                    android:text="M78 Wide Field"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/astronomyTextDateDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="start"
                    android:text="2021-01-21"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/astronomyTextExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:gravity="start"
                    android:scrollbars="vertical"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</layout>
